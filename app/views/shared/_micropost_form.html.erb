<%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <span class="dstuser">
      <%= f.text_field :dstuser, placeholder: "伝えたい相手を入力してください" %>
    </span>
    <div class="field">
      <%= f.text_area :content, placeholder: "伝えたい内容を入力してください" %>
    </div>
    <br><%= f.submit "賞賛", class: "btn btn-primary" %>
  <% end %>